<system xmlns="http://tail-f.com/ns/example/quagga/1.0">
  <vpn>
    <ipsec>
      <defaults>
	<hash-algo>sha1</hash-algo>
      </defaults>
      <tunnel>
	<name>xev1</name>
	<local-endpoint>1.1.1.1</local-endpoint>
	<local-net>1.1.1.1</local-net>
	<local-net-mask>1.1.1.1</local-net-mask>
	<remote-endpoint>1.1.1.1</remote-endpoint>
	<remote-net>1.1.1.1</remote-net>
	<remote-net-mask>1.1.1.1</remote-net-mask>
	<pre-shared-key>key1</pre-shared-key>
      </tunnel>
      <tunnel>
	<name>xev2</name>
	<local-endpoint>2.2.2.2</local-endpoint>
	<local-net>2.2.2.2</local-net>
	<local-net-mask>2.2.2.2</local-net-mask>
	<remote-endpoint>2.2.2.2</remote-endpoint>
	<remote-net>2.2.2.2</remote-net>
	<remote-net-mask>2.2.2.2</remote-net-mask>
	<pre-shared-key>key2</pre-shared-key>
      </tunnel>
    </ipsec>
  </vpn>
</system>
