# bash/zsh/sh environment for ConfM
# source this file to get all environment variable set up
# correctly. You need to stand at the confm install dir
# while sourcing the file




if [ -f confmrc ]; then
   CONFM_DIR=`pwd`
else
   echo "ERROR Need to stand at confm install top when sourcing confmrc"
   return
fi


# (Tail-f local) developer version - ignore this if statement
if [ -f ${CONFM_DIR}/vsn.mk ]; then
    CONFM_DIR=${CONFM_DIR}/confm_dir
fi


PATH=${CONFM_DIR}/bin:${PATH}

if [ "x${CLASSPATH}" != "x" ]; then
    CLASSPATH=${CONFM_DIR}/jar/INM.jar:${CONFM_DIR}/jar/ConfM.jar:${CONFM_DIR}/jar/ganymed/ganymed-ssh2-build251beta1.jar:.:$CLASSPATH
else
    CLASSPATH=${CONFM_DIR}/jar/INM.jar:${CONFM_DIR}/jar/ConfM.jar:${CONFM_DIR}/jar/ganymed/ganymed-ssh2-build251beta1.jar:.
fi

if [ "x${MANPATH}" != "x" ]; then
    MANPATH=${CONFM_DIR}/man:$MANPATH
else
    MANPATH=${CONFM_DIR}/man:/usr/share/man
fi
if [ "x${PYTHONPATH}" != "x" ]; then
    PYTHONPATH=${CONFM_DIR}/lib/pyang:$PYTHONPATH
else
    PYTHONPATH=${CONFM_DIR}/lib/pyang
fi
if [ "x${YANG_MODPATH}" != "x" ]; then
    YANG_MODPATH=${CONFM_DIR}/src/confd/yang:$YANG_MODPATH
else
    YANG_MODPATH=${CONFM_DIR}/src/confd/yang
fi

export PYTHONPATH
export YANG_MODPATH
export CONFM_DIR
export CLASSPATH
