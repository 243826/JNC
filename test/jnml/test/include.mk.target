JARFILE=$(CONFD_DIR)/java/mvnrepos/com/tailf/conf-api/$(CONFDVSN)/conf-api-$(CONFDVSN).jar
CLASSPATH=$(JARFILE):$(ASP):$(LOG4J):$(CONFM_DIR)/jar/INM.jar:$(CONFM_DIR)/jar/ConfM.jar:$(CONFM_DIR)/jar/ganymed/ganymed-ssh2-build251beta1.jar:.

CDB_DIR= ./confd-cdb
CONFD= $(CONFD_DIR)/bin/confd
CONFDC= $(CONFD_DIR)/bin/confdc
CONFMC= $(CONFM_DIR)/bin/confdc
