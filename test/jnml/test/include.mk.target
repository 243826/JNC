. ../../vsn.mk

check:
	@if [ -z "$${CONFD_DIR}" -o -z "$${CONFM_DIR}" ]; then \
           echo "*** Need to set CONFD_DIR and CONFM_DIR to run tests "; \
           echo "*** make all|test|clean "; exit 1; \
           exit 1; \
        fi
 

